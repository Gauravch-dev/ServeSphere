<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="24dp">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to ServeSphere!"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"
        android:textColor="#212121"/>

    <Button
        android:id="@+id/buttonAddBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Booking"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#1976D2"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/buttonViewBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Bookings"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#388E3C"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/buttonChatbot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Chatbot Assistant"
        android:backgroundTint="#F57C00"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnOpenMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Nearby Services"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white" />
</LinearLayout>
